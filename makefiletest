PREF_MENU = ./menuPrintScanf/
PREF_INPUT = ./inputData/
PREF_OUTPUT = ./outputData/
PREF_LIB = ./my_lib/

SRCMENU = $(wildcard $(PREF_MENU)*.c)
SRCINPUT = $(wildcard $(PREF_INPUT)*.c)
SRCOUTPUT = $(wildcard $(PREF_OUTPUT)*.c)
SRCLIB = $(wildcard $(PREF_LIB)*.c)

OBJMENU = $(patsubst $(PREF_MENU)%.c, $(PREF_MENU)%.o, $(SRCMENU))
OBJINPUT = $(patsubst $(PREF_INPUT)%.c, $(PREF_INPUT)%.o, $(SRCINPUT))
OBJOUTPUT = $(patsubst $(PREF_OUTPUT)%.c, $(PREF_OUTPUT)%.o, $(SRCOUTPUT))
OBJLIB = $(patsubst $(PREF_LIB)%.c, $(PREF_LIB)%.o, $(SRCLIB))

lab4 : $(OBJMENU) $(OBJINPUT) $(OBJOUTPUT) $(OBJLIB)
	gcc -o lab4 $(OBJMENU) $(OBJINPUT) $(OBJOUTPUT) $(OBJLIB)

$(PREF_MENU)%.o : $(PREF_MENU)%.c
	gcc -c $<

$(PREF_INPUT)%.o : $(PREF_INPUT)%.c
	gcc -c $<

$(PREF_OUTPUT)%.o : $(PREF_OUTPUT)%.c
	gcc -c $<

$(PREF_LIB)%.o : $(PREF_LIB)%.c
	gcc -c $<




